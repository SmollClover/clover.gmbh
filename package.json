{
	"name": "clover.gmbh",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"prettier": "prettier --write .",
		"lint": "yarn prettier && next lint"
	},
	"dependencies": {
		"framer-motion": "^6.3.3",
		"next": "^12.1.6",
		"next-strict-csp": "^1.0.1",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-icons": "^4.3.1",
		"sharp": "^0.30.5"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-angular": "^17.0.0",
		"@types/node": "^17.0.35",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.5",
		"@types/sharp": "^0.30.2",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.16.0",
		"eslint-config-next": "^12.1.6",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.4.2",
		"postcss": "^8.4.14",
		"prettier": "^2.6.2",
		"tailwind-dracula": "^1.1.0",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.6.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn dlx @yarnpkg/doctor && lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.ts": "prettier --write",
		"*.js": "prettier --write",
		"*.tsx": "prettier --write",
		"*.jsx": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				"pascal-case"
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test"
				]
			]
		}
	},
	"packageManager": "yarn@3.1.1"
}
